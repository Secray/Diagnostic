<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wingtech.diagnostic">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-feature android:name="android.hardware.camera.front"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:label="@string/main_bottom_button_repair"
            android:name=".activity.RepairActivity"
            android:launchMode="singleTask"/>

        <activity
            android:label="@string/main_bottom_button_help"
            android:name=".activity.HelpActivity"
            android:launchMode="singleTask"/>

        <activity android:name=".activity.AboutActivity"
            android:label="@string/menu_test_about"
            android:launchMode="singleTask"/>

        <activity android:name=".activity.HotlineServiceActivity"
            android:label="@string/help_list_item_hotline_service"
            android:launchMode="singleTask"/>

        <activity android:name=".activity.SendRepairRequestActivity"
            android:windowSoftInputMode="adjustResize"
            android:launchMode="singleTask"
            android:label="@string/repair_request_name"/>

        <activity android:name=".activity.TestResultActivity"
            android:launchMode="singleTask"
            android:label="@string/menu_test_result"/>

        <activity android:name=".activity.TouchActivity"
            android:launchMode="singleTask"
            android:label="@string/touch_title"/>

        <activity android:name=".activity.SingleTestListActivity"
            android:launchMode="singleTask"
            android:label="@string/main_bottom_button_single_test"/>

        <activity android:name=".activity.SingleTestActivity"/>

        <activity android:name=".activity.TouchTestActivity"/>

        <activity android:name=".activity.GSensorTestActivity"/>

        <activity android:name=".activity.CameraTestActivity"/>

        <activity android:name=".activity.TestAllActivity"/>
    </application>

</manifest>